#!/bin/sh

set -e # Abort execution on first failing command

p="psql -d $MEDIATUM_DATABASE_NAME -U $MEDIATUM_DATABASE_USER  -v ON_ERROR_STOP=on -f"

$p src/drop_all.sql
$p src/types.sql
$p src/auxiliary.sql
$p src/entities.sql
$p src/api-node.sql
$p src/api-meta.sql
$p src/api-folder.sql
$p src/api-document.sql
$p src/api-fts.sql
$p src/api-facets.sql
$p src/api-mutation.sql
$p src/examine.sql
$p src/debug.sql

